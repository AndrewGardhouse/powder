<h2> <%= @location.title %> </h2>
<hr />

<div class="row">
  <div class="col-sm-12">
    <%= link_to "Â« Back to Mountains", locations_path, class: "btn btn-link" %>
  </div>
</div>
<br />

	<div class="row ONE">
		<div class="col-sm-6">
			<div class="col-sm-6">
				<h3>Mountain Stats</h3>
				<% @location.description.each do |title, stat| %>
					<ul class="list-unstyled">
						<li><%= title %> : <%= stat %></li>
					</ul>
				<% end %>
			</div>

			<div class="col-sm-6">
				<h3>Weather</h3>
				<p>New snow in the last 24 Hours: <%= @location.snow_fall %> </p>
				<p>Snow Base: <%= @location.snow_base %></p>
				<p>Current Temperature: <%= @location.current_temp %></p>
				<div class="">
		      <%if @location.location_comments.size > 0 && @location.location_comments.any? {|comment| comment.vote != nil} %>
		      	<div> Users found the forecast <%= @location.location_comments.average(:vote).round(2) %> % accurate </div>
		        <% if @location.location_comments.average(:vote) >= 50.0 %>
		          <div class="label label-success"> 
		            Fresh Foecast! 
		          </div>
		        <% else %>
		          <div class="label label-danger"> 
		            False Forecast! 
		          </div>
		        <%end%>
		      <% else %>
		        <div class="label label-primary">
		          No one has rated this forecast yet
		        </div>  
		      <%end%>
		      <div> 
		        <%= link_to "Is this forecast Fresh or False?", new_location_location_comment_path(@location) %> 
		      </div>
	    	</div>
			</div>

			<div class="col-sm-12">
			<% if @location.deal_link != nil %>
				<div id="deals">
					<h3>Deals</h3>
						<% @location.deal_link.each do |deal, link| %>		
							<% if @location.title == 'Whistler Blackcomb' %>
								<p><%= link_to deal, link %></p>
							<% else %>
								<p><%= link_to deal, "http://www.liftopia.com/#{link}" %></p>
							<% end %>
						<% end %>
				</div>
			<% end %>		
		</div>	
		</div>
		<div class="col-sm-6 text-right">
			<%= image_tag(@location.url, style: "width:100%", class: "img-rounded") %> 
		</div>
	</div>

	<div class="row panel-body">
		<% parts = @location.essay.split(' ') %> 
		<% part_size = parts.size %> 
		<% part1 = parts.slice(0, part_size / 2).join(" ") %>
		<% part2 = parts.slice(part_size / 2, part_size).join(" ") %>
		<%#= @location.essay %>
		<div class="col-sm-6">
			<%= part1 %>
		</div>
		<div class="col-sm-6">
			<%= part2 %>
		</div>
	</div>
