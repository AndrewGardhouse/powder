<h1>Mountains</h1>
<hr/>

<div class="list-group container-fluid">
  <ul class="list-group container-fluid">
  <% @locations.each do |location| %>
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-6">
          <%= link_to location.title, location_path(location) %><br/>
          <%= location.description %>
        </div>
        <div class="col-xs-2">Votes: <%= location.upvote %></div>
        <div class="col-xs-2">Views</div>
        <div class="col-xs-2">Answers</div>
      </div>
    </li>
  <% end %>
  </ul>
</div>
