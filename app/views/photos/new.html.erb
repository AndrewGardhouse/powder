<h1>Gettin' Shreddy Stills</h1>
<%= form_for @photo, :html => { :multipart => true } do |f| %>

  <% if @photo.errors.any? %>
    <div>
      <%= pluralize(@photo.errors.count, "error") %> prevented this photo from being submitted:
      <ul>
        <% @photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "Shred Shot" %><br>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.label "Description" %><br>
    <%= f.text_area "description" %>
  </div>
  <div><%= f.submit "Submit" %></div>
<% end %>
