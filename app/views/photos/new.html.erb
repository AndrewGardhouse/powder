<h1>Gettin' Shreddy Stills</h1>

<div class="form-horizontal">
  <fieldset>
  <%= form_for @photo, :html => { :multipart => true } do |f| %>

  <% if @photo.errors.any? %>
    <div>
      <%= pluralize(@photo.errors.count, "error") %> prevented this photo from being submitted:
      <ul>
        <% @photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "title", :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field "title", :class => 'form-control' %>
    </div>
  </div>  
  <div class="form-group">
    <%= f.label "Description", :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_area "description", :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Shred Shot", :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.file_field :image%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Submit", :class => 'btn btn-primary' %>
    </div>
  </div>

  </fieldset>
  <%end%>
</div>
