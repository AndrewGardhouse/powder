<h1><%= @video.title %></h1>
<hr/>

<div class="text-center">
  <p><%= raw(@video.embed(@video.url))%></p>
</div>

<div>
  <p><%= @video.description %></p>
  <small><cite title="Source Title"> Posted by:  <%= @video.user.name %></cite></small>
  <small><p>Added: <%= formatted_date(@video.created_at) %></p></small>
    <% @video.tag_list.each do |tag| %>
    <span class="label label-primary"><%= tag %></span>
  <% end %>
</div>

<div class="comments container">
  <div class="row">
    <h3>Comments</h3>
    <hr/>
  </div>

  <% @video.video_comments.each do |comment| %>
    <div class="well well-sm row">
      <img src="http://lorempixel.com/48/48/people" alt="" class="img-circle pull-left" />
      <a href="#"><%= comment.user.name %></a> <em><%= formatted_date(comment.created_at) %></em><br>
      <%= comment.text %>
    </div>
  <% end %>
    <% unless current_user.name == @video.user.name %>
      <p><%= link_to "Leave a comment", new_video_video_comment_path(@video) %></p>
    <% end %>
  <% unless current_user%>
    <p>Please <%= link_to "log in", new_session_path %> to see reviews and add your own.</p> 
  <% end %>
</div>