<h1>Videos#new</h1>

<%= form_for @video do |f| %>

  <% if @video.errors.any? %>
    <div>
      <%= pluralize(@video.errors.count, "error") %> prevented this video from being submitted:
      <ul>
        <% @video.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "Video Link" %><br>
    <%= f.text_field "url" %>
  </div>
  <div>
    <%= f.label "Description" %><br>
    <%= f.text_area "description" %>
  </div>
  <div><%= f.submit "Submit" %></div>
<% end %>
