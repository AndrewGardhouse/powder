<h1>Videos</h1>
<hr/>

<div class="row">
  <% @videos.each do |video| %>
    <div class="col-lg-2 col-sm-3 col-xs-4">
      <p><%= link_to image_tag(video.thumbnail(video.url)), video_path(video.id), :class => 'thumbnail img-responsive' %></p>
      <p><%= video.title %></p>
      <small><cite title="Source Title"><%= video.user.name %></cite></small>
      <span class="label label-primary">Air</span>
    </div>
  <% end %>
</div>
