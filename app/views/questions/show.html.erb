<h1>Q &amp; A</h1>
<hr/>

<div class="container-fluid">
  <div class="jumbotron">
    <h2><strong><%= @question.title %></strong></h2>
    <hr/>
    <p><%=@question.description %></p>
    <p><strong><small><%=@question.user.try(:name)%></small></strong></p>
    <p><small><%= formatted_date(@question.created_at)%></small></p>
    <span class="label label-primary"><%= @question.tags %></span>
  </div>
</div>



<div class="comments container">
  <div class="row">
    <h3>Answers</h3>
    <hr/>
  </div>
  <div class="row">  
    <%= link_to "Answer!", new_question_answer_path(@question), :class => "btn btn-primary" %>
  </div>
  <br>
  <div class="well well-sm row">
    <% @answers.each do |answer|%>
      <%= image_tag gravatar(answer.user.email), :class => "img-circle pull-left" %>
      <%= answer.user.try(:name) %> 
      <em>on <%=formatted_date(answer.created_at)%></em><br>
      <%= answer.description %>
    <%end%>
  </div>
</div>


<div class="comments container">
  <div class="well well-sm row">
    <img src="http://lorempixel.com/48/48/people" alt="" class="img-circle pull-left" />
    <a href="#">ggoulart</a> <em>on March 5th, 2014</em><br>
    Whistler up at the peak!
  </div>
</div>

